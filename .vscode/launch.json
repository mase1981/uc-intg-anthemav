{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Anthem Integration (Framework)",
            "type": "debugpy",
            "request": "launch",
            "module": "uc_intg_anthemav",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "UC_CONFIG_HOME": "${workspaceFolder}/config"
            }
        },
        {
            "name": "Python: Anthem Simulator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/anthem_simulator.py",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}